//#Q1->Maximum Subarray Sum

Solution Code:-

class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int n = nums.size() ;
        int sum  =0 ;
        int i = 0 ;
        int maxSum =INT_MIN ;
        while( i< n){
            sum += nums[i] ;
            maxSum = max(maxSum, sum) ;
    
            if(sum <0){
                sum = 0 ;
                i++ ;
            }
            else{
                i++ ;
            }
        }
        return maxSum ;
    }
};


